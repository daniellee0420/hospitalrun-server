{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ],
    "moduleResolution": "node",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "pretty": true,
    "lib": [
      "esnext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "removeComments": true,
    "newLine": "lf",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true
  }
}
